<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/shuidilist"
    android:fitsSystemWindows="true">
    <Toolbar
        android:id="@+id/toolbar"
        android:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="207dp"
        android:layout_height="83dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/splash_logo">
    </ImageView>

    <Button
        android:id="@+id/btn_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_circle_shape"
        android:text="用户名登陆"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:drawableLeft="@mipmap/ic_user"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:paddingLeft="40dp"/>


    <Button
        android:id="@+id/btn_sinaweibo_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_circle_shape"
        android:text="新浪微博登陆"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:drawableLeft="@mipmap/account_sina"
        android:textSize="15dp"
        android:paddingLeft="40dp"/>

    <Button

        android:id="@+id/tencentweibo_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_circle_shape"
        android:text="腾讯微博登陆"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:drawableLeft="@mipmap/account_tencent"
        android:textColor="@color/black"
        android:textSize="15dp"

        android:paddingLeft="40dp"/>
    <Button
        android:id="@+id/register"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="@color/white"/>

</LinearLayout>